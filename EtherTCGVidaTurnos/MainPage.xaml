<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EtherTCGVidaTurnos.MainPage"
             BackgroundColor="SlateGrey"
             Title="Ether TCG">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Ether TCG - Contador de Vidas e Turnos"
               FontSize="45"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Iniciar Partida"
                FontSize="20"
                Clicked="OnIniciarPartidaClicked" 
                FontAttributes="Bold"
                BackgroundColor="#FFDC91"
                TextColor="Black"
                /> 
    </VerticalStackLayout>
</ContentPage>
